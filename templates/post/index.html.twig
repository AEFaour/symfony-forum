{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}

    <table class="table table-striped table-bordered table-danger text-center">
        <tr>
            <td>Titre</td>
            <td>Date de publication</td>
            <td>Author</td>
        </tr>
        {% for post in postList %}
            <tr>
                <td>{{ post.title }}</td>
                <td>{{ post.createdAt | date('d/m/y') }}</td>
                <td>{{ post.author.email }}</td>
            </tr>
        {% endfor %}
    </table>
    {{ knp_pagination_render(postList) }}
{% endblock %}


